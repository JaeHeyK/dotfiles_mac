                "modifiers": {
                  "mandatory": [
                    "left_gui",
                    "left_option"
                  ]
                }
              },
              "to": [
                {
                  "shell_command": "/usr/local/bin/yabai -m window --focus south"
                }
              ]
            }
          ]
        },
        {
          "description": "Focus to prev space",
          "manipulators": [
            {
              "type": "basic",
              "from": {
                "key_code": "left_arrow",
                "modifiers": {
                  "mandatory": [
                    "left_control",
                    "left_option"
                  ]
                }
              },
              "to": [
                {
                  "shell_command": "/usr/local/bin/yabai -m space --focus prev"
                }
              ]
            }
          ]
        },
        {
          "description": "Focus to next space",
          "manipulators": [
            {
              "type": "basic",
              "from": {
                "key_code": "right_arrow",
                "modifiers": {
                  "mandatory": [
                    "left_control",
                    "left_option"
                  ]
                }
              },
              "to": [
                {
                  "shell_command": "/usr/local/bin/yabai -m space --focus next"
                }
              ]
            }
          ]
        }
      ]
}
